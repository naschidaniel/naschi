---
import "leaflet/dist/leaflet.css";
---

<div id="map"></div>

<script>
  import { LatLngExpression, Map, Marker, TileLayer } from "leaflet";
  import L from "leaflet"; // eslint-disable-line

  const center: LatLngExpression = [
    47.258506384278746, 11.388476356948974,
  ] as LatLngExpression;
  const map: Map = L.map("map").setView(center, 16);

  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution:
      '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
  }).addTo(map) as TileLayer;

  L.marker(center)
    .addTo(map)
    .bindPopup("Peter-Mayr-Stra√üe 29, A-6020 Innsbruck")
    .openPopup() as Marker;
</script>

<style>
  #map {
    height: 500px;
  }
  @media (max-width: 1400px) {
    #map {
      height: 400px;
    }
  }
  @media (max-width: 1000px) {
    #map {
      height: 300px;
    }
  }
</style>
