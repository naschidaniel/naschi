<style>
  .basic-map-gallery-container {
    display: flex;
    flex-wrap: wrap;
  }
  .basic-map-gallery {
    width: 100%;
    padding: 0px;
  }

  .grid-container {
    display: grid;
    grid-template-columns: auto;
  }
  .grid-item {
    padding: 10px;
    text-align: left;
  }

  .grid-item > table {
    width: 100%;
  }

  .grid-item > table > tr > td {
    width: 60%;
  }

  .version {
    text-align: right;
    color: #d3d3d3;
    font-size: 50%;
  }

  @media only screen and (min-width: 750px) {
    .grid-container {
      grid-template-columns: auto auto;
    }
  }

  @media only print {
    .grid-container {
      grid-template-columns: 350px 350px;
    }
    .grid-item {
      margin: auto;
      align-self: center;
    }
  }

  @media only screen and (min-width: 1000px) {
    .basic-map-gallery {
      width: 48%;
      padding: 9px;
    }

    .grid-container {
      grid-template-columns: auto auto auto;
    }
  }

  @media screen {
    .no-screen {
      display: none;
    }
  }

  @media print {
    .no-print {
      display: none;
    }
  }
</style>
