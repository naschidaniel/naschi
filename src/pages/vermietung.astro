<style>
  .basic-map-gallery-container {
    display: flex;
    flex-wrap: wrap;
  }
  .basic-map-gallery {
    width: 100%;
    padding: 0px;
  }

  .grid-container {
    display: grid;
    grid-template-columns: auto;
  }
  .grid-item {
    padding: 10px;
    text-align: left;
  }

  .grid-item > table {
    width: 100%;
  }

  .grid-item > table > tr > td {
    width: 50%;
  }

  @media only screen and (min-width: 750px) {
    .grid-container {
      grid-template-columns: auto auto;
    }
  }

  @media only screen and (min-width: 1000px) {
    .basic-map-gallery {
      width: 48%;
      padding: 9px;
    }

    .grid-container {
      grid-template-columns: auto auto auto;
    }
  }
</style>
